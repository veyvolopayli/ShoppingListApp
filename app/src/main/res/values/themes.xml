<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingListApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewRegular" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="TextViewBold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

</resources>